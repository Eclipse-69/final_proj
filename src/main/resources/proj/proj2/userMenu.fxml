<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="700.0" style="-fx-background-color: #2E3348;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proj.proj2.userMenuController">
    <children>
        <!-- View Pane -->
        <AnchorPane fx:id="viewPane" prefHeight="396.0" prefWidth="700.0" style="-fx-background-color: #fafafa;">
            <children>
                <Label fx:id="usernameLabel" layoutX="50.0" layoutY="60.0" text="Name: " />
                <Label fx:id="positionLabel" layoutX="50.0" layoutY="100.0" text="Position: " />
                <Label fx:id="emailLabel" layoutX="50.0" layoutY="140.0" text="Email: " />
                <Label fx:id="ageLabel" layoutX="50.0" layoutY="180.0" text="Age: " />
                <Label fx:id="resumeLabel" layoutX="50.0" layoutY="220.0" text="Resume: " />
                <Button fx:id="editButton" layoutX="33.0" layoutY="280.0" text="Change my information" />
            </children>
        </AnchorPane>

        <!-- Edit Pane -->
        <AnchorPane fx:id="editPane" prefHeight="436.0" prefWidth="700.0" style="-fx-background-color: #fafafa;" visible="false">
            <children>
                <TextField fx:id="editUsernameField" layoutX="50.0" layoutY="60.0" promptText="Enter new username" />
                <TextField fx:id="editEmailField" layoutX="50.0" layoutY="100.0" promptText="Enter new email" />
                <TextField fx:id="editPasswordField" layoutX="50.0" layoutY="140.0" promptText="Enter new password" />
                <TextField fx:id="editResumeField" layoutX="50.0" layoutY="180.0" promptText="Enter new resume" />
                <Button fx:id="saveButton" layoutX="33.0" layoutY="240.0" text="Save changes" />
                <Button fx:id="cancelButton" layoutX="220.0" layoutY="240.0" text="Cancel" />
            </children>
        </AnchorPane>
        <Label layoutX="236.0" layoutY="322.0" prefHeight="59.0" prefWidth="226.0" text="User Menu" textFill="#0e6110">
            <font>
                <Font size="45.0" />
            </font>
        </Label>
    </children>
</AnchorPane>